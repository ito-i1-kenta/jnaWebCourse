<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jna.example.training.infrastructure.mapper.AssigneeMapper">
    <select id="getAssigneeList" resultType="jna.example.training.infrastructure.entity.AssigneeEntity">
        SELECT
            *
        From m_assignee
    </select>

    <select id="searchById" resultType="jna.example.training.infrastructure.entity.AssigneeEntity">
        SELECT
        ASSIGNEE_ID,
        ASSIGNEE_NAME
        FROM
        m_assignee
        where
        ASSIGNEE_ID = '${assigneeId}'
    </select>

    <insert id="save" useGeneratedKeys="true" >
        INSERT INTO m_assignee (
        ASSIGNEE_NAME
        )
        VALUE
        (
        #{assigneeName}
        )
    </insert>

    <update id="update">
        update m_assignee set
        assignee_name = #{assigneeName}
        where assignee_id = #{assigneeId}
    </update>

    <update id="delete">
        delete from m_assignee
        where
        assignee_id = #{assigneeId}
    </update>
</mapper>