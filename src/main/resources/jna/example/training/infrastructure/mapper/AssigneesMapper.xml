<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jna.example.training.infrastructure.mapper.AssigneesMapper">
    <select id="getAssigneeList" resultType="jna.example.training.infrastructure.entity.AssigneeEntity">
        SELECT
        *
        From m_assignees
    </select>

    <select id="searchById" resultType="jna.example.training.infrastructure.entity.AssigneeEntity">
        SELECT
        *
        From m_assignees
        where
        ASSIGNEE_ID = #{assigneeId}
    </select>

    <delete id="delete">
        DELETE
        FROM
            m_assignees
        WHERE
            ASSIGNEE_ID = #{assigneeId}
    </delete>

    <update id="edit">
        UPDATE m_assignees
        SET
            ASSIGNEE_NAME = #{assigneeName}
        WHERE
            ASSIGNEE_ID = #{assigneeId}
    </update>

    <insert id="save">
        INSERT INTO m_assignees
        (
            ASSIGNEE_NAME
        )
        VALUES
        (
            #{assigneeName}
        )
    </insert>

</mapper>